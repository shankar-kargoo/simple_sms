<% @page_title = "Pages" %>

<%= link_to("<< Admin Page", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div Class="pages index">
	<h2>Pages</h2>
	
	<%= link_to(image_tag('plus_sign.png', :alt => '+') + " Add New Page", {:action => 'new'}, :class => 'action new') %>

	<table class="listings" summary ="Page List">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Subject</th>
			<th>Page</th>
			<th>Permalink</th>
			<th>Visible</th>
			<th>Sections</th>
			<th>Actions</th>
		</tr>
		<% @pages.each do |page| %>
		<tr>
			<td><%= page.position %></td>
			<td ><%= page.subject.name if page.subject %></td>
			<td ><%= page.name %></td>
			<td ><%= page.permalink %></td>
			<td class="center"><%= status_tag(page.visible) %></td>
			<td class="center"><%= page.sections.size %></td>
			<td class="action">
				<%= link_to("Show", {:action => 'show', :id => page.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :id => page.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => page.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
