<% @page_title = "Sections" %>

<%= link_to("<< Admin Page", {:controller => 'access', :action => 'index'}, :class => 'back-link') %>

<div Class="sections index">
	<h2>Sections</h2>
	
	<%= link_to(image_tag('plus_sign.png', :alt => '+') + " Add New Section", {:action => 'new'}, :class => 'action new') %>

	<table class="listings" summary ="Section List">
		<tr class="header">
			<th>&nbsp;</th>
			<th>Section Name</th>
			<th>Page No.</th>
			<th>Visible</th>
			<th>Content Type</th>
			<th>Actions</th>
		</tr>
		<% @sections.each do |section| %>
		<tr>
			<td><%= section.position %></td>
			<td><%= section.name %></td>
			<td class="center"><%= section.page_id %></td>		
			<td class="center"><%= status_tag(section.visible) %></td>
			<td class="center"><%= section.content_type %></td>
			<td class="action">
				<%= link_to("Show", {:action => 'show', :id => section.id}, :class => 'action show') %>
				<%= link_to("Edit", {:action => 'edit', :id => section.id}, :class => 'action edit') %>
				<%= link_to("Delete", {:action => 'delete', :id => section.id}, :class => 'action delete') %>
			</td>
		</tr>
		<% end %>
	</table>
</div>
